<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>
    <link rel="Webpage Icon" href="/PSIT_logo_green.svg" style="fill: green" />
    <style>
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        background-color: #f2f2f2;
      }

      .container {
        margin-top: 100px;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
      }

      input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 3px;
      }

      button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }
      .loading-overlay {
        display: none;
        position: fixed;
        font-size: 25px;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.852);
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .loading {
        text-align: center;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const resendLink = document.getElementById("resendLink");
        const timerSpan = document.getElementById("timer");

        let isClickable = true;
        let remainingTime =
          parseInt(localStorage.getItem("remainingTime")) || 30;
        let timerInterval;

        function updateTimer() {
          timerSpan.textContent = remainingTime;
          remainingTime--;

          if (remainingTime < 0) {
            clearInterval(timerInterval);
            isClickable = true;
            resendLink.style.pointerEvents = "auto";
            resendLink.style.color = "#007BFF";
            timerSpan.textContent = 0;
          }
        }

        function startTimer() {
          if (isClickable) {
            isClickable = false;
            resendLink.style.pointerEvents = "none";
            resendLink.style.color = "#ccc";
            timerInterval = setInterval(updateTimer, 1000);
          }
        }

        // Start the timer automatically when the page loads
        startTimer();

        resendLink.addEventListener("click", startTimer);

        // Save remainingTime in localStorage
        localStorage.setItem("remainingTime", remainingTime);
      });
    </script>
  </head>
  <body>
    <div class="container">
      <p>
        An email has been sent to your address. Click the link below to resend
        the email:
      </p>
      <a href="/resendMail" id="resendLink">Resend Email</a>
      <p>Time left to resend: <span id="timer">30</span> seconds</p>
      <h2>Enter your 6-digit OTP</h2>
      <form id="otpForm" action="/verified/newPassword" method="post">
        <input
          type="number"
          id="otpInput"
          maxlength="6"
          pattern="\d{6}"
          title="Enter a 6-digit OTP"
          required
          name="enteredOTP"
          oninput="validateOTP(this)"
        />
        <br />
        <button type="submit">Verify OTP</button>
      </form>
      <div id="message"></div>
      <div class="loading-overlay" id="loadingOverlay" style="display: none">
        <div class="loading">
          <p>Loading...</p>
        </div>
      </div>
    </div>
    <script>
      // Update the button ID to "submitButton"
      document
        .getElementById("resendLink")
        .addEventListener("click", function () {
          // Show the loading overlay
          document.getElementById("loadingOverlay").style.display = "flex";
          // Submit the form immediately
          // document.getElementById("verificationForm").submit();
        });
      const expectedOTP = "<%= expectedOTP %>";

      document
        .getElementById("otpForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();

          const enteredOTP = document.getElementById("otpInput").value;

          if (enteredOTP === expectedOTP) {
            document.getElementById("message").textContent =
              "OTP is valid. Redirecting...";

            // Redirect to another page
            window.location.href = "/verified/newPassword"; // Replace with the URL of the page you want to redirect to
          } else {
            document.getElementById("message").textContent =
              "Invalid OTP. Please try again.";
          }
        });
      function validateOTP(input) {
        let otp = input.value;

        // Remove any non-digit characters
        otp = otp.replace(/\D/g, "");

        // Limit the input to 6 digits
        if (otp.length > 6) {
          otp = otp.slice(0, 6);
        }

        // Update the input value
        input.value = otp;
      }
      window.addEventListener("popstate", function (event) {
        // Force a full page reload
        location.href = location.href;
      });
      // Add an event listener for the popstate event
window.addEventListener('popstate', function(event) {
    // Check if there's a valid state object
    if (event.state !== null) {
        // Reload the previous page
        window.location.href = document.referrer;
    }
});

// Push an initial state to the history stack when the page loads
history.pushState({ page: 'initial' }, document.title, window.location.href);

    </script>
  </body>
</html>
