<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Post Applications</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans&display=swap"
      rel="stylesheet"
    />
    <link rel="Webpage Icon" href="/PSIT_logo_green.svg" style="fill: green" />
    <style>
      /* Styles for the navigation and header */
      body {
        font-family: "Work Sans", sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }

      .header {
        padding: 0px 0;
        background-color: #0b0372c7;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2%;
      }

      nav h1 {
        font-size: 24px;
        color: white;
      }

      .menu-icon {
        display: none;
        cursor: pointer;
        color: white;
      }

      .nav-links {
        display: flex;
        gap: 15px;
      }

      .nav-links ul {
        display: flex;
        gap: 20px;
      }

      .nav-links ul li {
        list-style: none;
      }

      .nav-links ul li a {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      .nav-links ul li a:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      @media only screen and (max-width: 768px) {
        .nav-links {
          position: fixed;
          top: 0;
          right: -100%; /* Initially off the screen */
          height: 100%;
          width: 100%;
          background-color: rgba(0, 0, 0, 0.8);
          z-index: 100;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          gap: 15px;
          transition: right 0.3s;
        }

        .nav-links.active {
          right: 0;
        }

        .menu-icon {
          display: block;
        }
        .nav-active {
          position: fixed;
          top: 0;
          left: 0;
          height: 100%;
          width: 100%;
          background-color: rgba(0, 0, 0, 0.8);
          z-index: 100;
          display: flex;
          justify-content: center;
          align-items: center;
        }

        .nav-active ul {
          flex-direction: column;
          gap: 15px;
        }
      }

      /* Your profile styles, untouched */
      .profile-section {
        max-width: 500px;
        margin: 50px auto;
        border: 2px solid #ddd;
        background: #0b0372c7;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .profile-section:hover {
        box-shadow: 0 0 20px 0px rgba(0, 0, 0, 0.249);
      }

      .profile-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
      }

      .profile-item {
        font-size: 18px;
        margin-bottom: 15px;
        padding-bottom: 10px;
      }

      .profile-label {
        font-weight: 600;
        display: inline-block;
        width: 150px;
      }

      .profile-input {
        width: 65%;
        padding: 5px;
        font-size: 18px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }

      .profile-submit-btn {
        padding: 8px 15px;
        background-color: rgb(7, 164, 96);
        color: #ffffff;
        font-size: 15px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .profile-submit-btn:hover {
        background-color: #100c47c7;
      }

      .form-content {
        display: flex;
        justify-content: space-between;
      }

      .image-upload-container {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #imageUpload {
        display: none;
      }

      #imagePreview {
        width: 170px;
        height: 170px;
        border: 2px solid #0b0372c7;
        border-radius: 50%;
        object-fit: cover;
        display: block;
        margin-bottom: 10px;
      }

      .image-upload-label {
        display: inline-block;
        background: rgb(7, 164, 96);
        color: #ffffff;
        padding: 5px 10px;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .image-upload-label:hover {
        background-color: #0c093fc7;
      }

      @media only screen and (max-width: 768px) {
        .nav-links {
          position: fixed;
          top: 0;
          right: -100%; /* Initially off the screen */
          height: 100vh;
          width: 100%; /* Full width */
          background-color: rgb(
            46,
            204,
            112
          ); /* Transparent green background */
          z-index: 100;
          flex-direction: column;
          justify-content: center; /* Centering items vertically */
          transition: right 0.3s;
        }

        .nav-links ul {
          width: 100%;
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 20px;
        }

        .nav-links ul li {
          list-style: none;
        }

        .nav-links ul li a {
          text-decoration: none;
          color: white;
          padding: 5px 10px;
          border-radius: 5px;
          transition: background-color 0.3s;
        }

        .menu-icon {
          display: block;
        }
        .form-content {
          flex-direction: column;
          align-items: center;
        }

        .image-upload-container {
          margin-top: 20px;
        }

        .profile-input,
        .profile-label {
          width: 100%;
          text-align: center;
          margin: 5px 0;
        }

        .profile-item {
          text-align: center;
        }

        #imagePreview {
          width: 100px;
          height: 100px;
        }

        .profile-section {
          width: 90%;
          box-shadow: none;
        }

        .profile-section:hover {
          box-shadow: none;
        }
      }
      .menu-icon {
        z-index: 101; /* Ensure the icon is above the menu */
      }

      @media only screen and (max-width: 768px) {
        .nav-links {
          /* Other styles */
          z-index: 100; /* Ensure the menu is below the icon */
        }
        .menu-icon {
          margin-right: 15px;
          font-size: 25px;
        }
      }
      a{
        color: white;
        text-decoration: none;
      }
    </style>
  </head>

  <body>
    <section class="header">
      <nav>
        <h1><a href="/account">EmployeeNet</a></h1>
        <div class="menu-icon" onclick="toggleMenu()">
          <i class="fas fa-bars"></i>
        </div>

        <div class="nav-links" id="navLinks">
          <ul>
            <li><a href="/account/profile">Profile</a></li>
            <li><a href="/jobDetails">Job Information</a></li>
            <li><a href="/userContact">Contact</a></li>
            <li><a href="/uploadJob">Post Applications</a></li>
            <li><a href="/noticeBoard">Notice Board</a></li>
            <li><a href="/logout">LogOut</a></li>
          </ul>
        </div>
      </nav>
    </section>
    <h1><%= message %></h1>
    <div class="profile-section">
      <div class="profile-title">Upload-Jobs</div>
      <h4>Please upload job/internship offers provided by your company to the freshers and your fellow juniors</h4>
      <form
        action="/uploadJob"
        method="POST"
        enctype="multipart/form-data"
        class="container"
      >
        <label for="file" class="upload-button">
          <span class="file-input-label">Choose a file</span>
          <input
            type="file"
            id="file"
            name="file"
            required
            onchange="updateFileName()"
          />
        </label>
        <span class="file-name" id="file-name"></span>
        <button type="submit">Upload</button>
      </form>
    </div>

    <script>
      function toggleMenu() {
        const navLinks = document.getElementById("navLinks");
        if (navLinks.style.right === "0%" || navLinks.style.right === "") {
          navLinks.style.right = "-100%"; // Hide off to the right
        } else {
          navLinks.style.right = "0%"; // Show by sliding in from the right
        }
      }

      function previewImage() {
        const file = document.getElementById("imageUpload").files[0];
        const preview = document.getElementById("imagePreview");

        const reader = new FileReader();
        reader.onloadend = function () {
          preview.src = reader.result;
        };

        if (file) {
          reader.readAsDataURL(file);
        } else {
          preview.src = "";
        }
      }
      window.addEventListener("popstate", function (event) {
        // Force a full page reload
        console.log("popstate event triggered");
        location.href = location.href;
      });
      // Add an event listener for the popstate event
      window.addEventListener("popstate", function (event) {
        // Check if there's a valid state object
        if (event.state !== null) {
          // Reload the previous page
          window.location.href = document.referrer;
        }
      });

      // Push an initial state to the history stack when the page loads
      history.pushState(
        { page: "initial" },
        document.title,
        window.location.href
      );
      // Add an event listener for the popstate event
      window.addEventListener("popstate", function (event) {
        // Check if there's a valid state object
        if (event.state !== null) {
          // Reload the previous page using the history API
          history.go(-1);
        }
      });

      // Push an initial state to the history stack when the page loads
      history.pushState(
        { page: "initial" },
        document.title,
        window.location.href
      );
    </script>
  </body>
</html>
